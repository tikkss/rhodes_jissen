<div data-role="page">
  <div data-role="header" data-position="inline">
    <h1>JsonSamples</h1>
    <a href="<%= Rho::RhoConfig.start_path %>" class="ui-btn-left" data-icon="home" data-direction="reverse">
      ホーム
      </a>
    <a href="<%= url_for :action => :new %>" class="ui-btn-right" data-icon="plus">
        新規作成
    </a>
  </div>
  <div data-role="navbar">
    <ul>
      <li><a href=<%= url_for(:action => :index, :query => {:page => @page - 1}) %>>前へ</a></li>
      <li><a href=<%= url_for(:action => :index, :query => {:page => @page + 1}) %>>次へ</a></li>
    </ul>
  </div>
  <div data-role="content">
    <ul data-role="listview">
      <% @jsonsamples.each do |jsonsample| %>
        <li>
          <a href="<%= url_for :action => :show, :id => jsonsample.object %>">
            <%= jsonsample.title %>
          </a>
        </li>
      <% end %> 
    </ul>
  </div>
</div>